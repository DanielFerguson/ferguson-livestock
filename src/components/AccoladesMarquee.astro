---
const accolades = [
    { cow: "Wattledene Dawn", award: "Supreme Murray Grey Exhibit", show: "Maffa Show 2023" },
    { cow: "Wattledene Dawn", award: "Supreme Murray Grey Exhibit", show: "Sale Show 2023" },
    { cow: "Wattledene Hovea", award: "Reserve Champion Interbreed Senior Female", show: "Bellarine 2025" },
    { cow: "Wattledene Lilac", award: "Reserve Champion Senior Murray Grey Female", show: "Royal Melbourne Show 2024" },
    { cow: "Ferguson Uno", award: "Interbreed Supreme Champion", show: "Beaufort Show 2024" },
    { cow: "Ferguson Uno", award: "Supreme Murray Grey Exhibit", show: "Clunes Show 2024" },
    { cow: "Ferguson Uno", award: "Junior Champion Murray Grey Female", show: "Whittlesea Show 2024" },
    { cow: "Ferguson Uno", award: "Junior Champion Murray Grey Female", show: "Geelong Royal Show 2024" },
    { cow: "Ferguson Vibrant Dawn", award: "Reserve Junior Champion Female", show: "Bellarine Show 2025" },
    { cow: "Ferguson Vibrant Dawn", award: "Reserve Junior Champion Female", show: "Stud Beef Handlers Camp 2025" },
    { cow: "Ferguson Vaquero", award: "Supreme Murray Grey Exhibit", show: "Geelong Royal Show 2025" },
    { cow: "Ferguson Vaquero", award: "Supreme Murray Grey Exhibit", show: "Clunes Show 2025" },
    { cow: "Ferguson Vaquero", award: "Supreme Murray Grey Exhibit", show: "Beaufort Show 2025" },
];
---

<section class="bg-forest overflow-hidden py-4">
    <div id="accolades-marquee-wrapper" style="display: flex; width: max-content; animation: scroll-left 80s linear infinite;">
        <div style="display: flex; flex-shrink: 0;">
            {accolades.map((item) => (
                <span style="display: flex; align-items: center; gap: 0.5rem; padding: 0 2rem; white-space: nowrap; font-size: 0.875rem;">
                    <svg class="w-4 h-4 fill-warm flex-shrink-0" viewBox="0 0 24 24">
                        <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z" />
                    </svg>
                    <span class="text-mint-light font-semibold">{item.cow}</span>
                    <span class="text-cream/70">—</span>
                    <span class="text-cream">{item.award}</span>
                    <span class="text-cream/50">•</span>
                    <span class="text-cream/70">{item.show}</span>
                </span>
            ))}
        </div>
        <div style="display: flex; flex-shrink: 0;" aria-hidden="true">
            {accolades.map((item) => (
                <span style="display: flex; align-items: center; gap: 0.5rem; padding: 0 2rem; white-space: nowrap; font-size: 0.875rem;">
                    <svg class="w-4 h-4 fill-warm flex-shrink-0" viewBox="0 0 24 24">
                        <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z" />
                    </svg>
                    <span class="text-mint-light font-semibold">{item.cow}</span>
                    <span class="text-cream/70">—</span>
                    <span class="text-cream">{item.award}</span>
                    <span class="text-cream/50">•</span>
                    <span class="text-cream/70">{item.show}</span>
                </span>
            ))}
        </div>
    </div>
</section>

<style>
    @keyframes scroll-left {
        0% {
            transform: translateX(0);
        }
        100% {
            transform: translateX(-50%);
        }
    }

    #accolades-marquee-wrapper:hover {
        animation-play-state: paused;
    }
</style>

