---
import { Image } from "astro:assets";
import step1Image from "../assets/images/cows-10.webp";
import step2Image from "../assets/images/ute-1.webp";
import step3Image from "../assets/images/box.webp";
import step4Image from "../assets/images/family-1.webp";
---

<section class="py-24 bg-cream-dark">
    <div class="max-w-6xl mx-auto px-6">
        <div class="text-center mb-16">
            <span
                class="inline-block text-xs font-semibold uppercase tracking-widest text-sage mb-4"
                >The Journey</span
            >
            <h2
                class="font-display text-3xl md:text-4xl lg:text-5xl font-semibold text-forest mb-4 tracking-tight"
            >
                From Our Paddock to Your Plate
            </h2>
            <p class="text-lg text-gray-500 max-w-2xl mx-auto">
                Complete traceability. Total freshness. Here's exactly what
                happens from our farm to your freezer.
            </p>
        </div>

        <!-- Timeline -->
        <div class="relative">
            <!-- Connection Line -->
            <div
                class="hidden lg:block absolute top-24 left-0 right-0 h-1 bg-linear-to-r from-forest via-sage to-mint"
            >
            </div>

            <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
                <!-- Step 1 -->
                <div class="relative">
                    <div
                        class="bg-white rounded-2xl border border-forest/5 shadow-sm h-full overflow-hidden"
                    >
                        <div class="h-32 overflow-hidden">
                            <Image
                                src={step1Image}
                                alt="Murray Grey cattle on pasture"
                                class="w-full h-full object-cover"
                                widths={[300, 400]}
                                sizes="(max-width: 768px) 100vw, 25vw"
                            />
                        </div>
                        <div class="p-6">
                            <div
                                class="w-12 h-12 bg-linear-to-br from-forest to-sage rounded-full flex items-center justify-center mb-4 relative z-10 -mt-10 border-4 border-white shadow-lg"
                            >
                                <span
                                    class="font-display text-lg font-bold text-mint-light"
                                    >1</span
                                >
                            </div>
                            <div
                                class="inline-block bg-forest/10 text-forest text-xs font-semibold px-3 py-1 rounded-full mb-3"
                            >
                                Their Whole Life
                            </div>
                            <h3
                                class="font-display text-lg font-semibold text-forest mb-2"
                            >
                                Raised on Pasture
                            </h3>
                            <p class="text-gray-500 text-sm leading-relaxed">
                                Our Murray Greys spend their entire lives
                                grazing on our Snake Valley pastures. No
                                feedlots, no confinement.
                            </p>
                        </div>
                    </div>
                </div>

                <!-- Step 2 -->
                <div class="relative">
                    <div
                        class="bg-white rounded-2xl border border-forest/5 shadow-sm h-full overflow-hidden"
                    >
                        <div class="h-32 overflow-hidden">
                            <Image
                                src={step2Image}
                                alt="Murray Grey cattle on pasture"
                                class="w-full h-full object-cover"
                                widths={[300, 400]}
                                sizes="(max-width: 768px) 100vw, 25vw"
                            />
                        </div>
                        <div class="p-6">
                            <div
                                class="w-12 h-12 bg-linear-to-br from-forest to-sage rounded-full flex items-center justify-center mb-4 relative z-10 -mt-10 border-4 border-white shadow-lg"
                            >
                                <span
                                    class="font-display text-lg font-bold text-mint-light"
                                    >2</span
                                >
                            </div>
                            <div
                                class="inline-block bg-forest/10 text-forest text-xs font-semibold px-3 py-1 rounded-full mb-3"
                            >
                                Day 1
                            </div>
                            <h3
                                class="font-display text-lg font-semibold text-forest mb-2"
                            >
                                Local Processing
                            </h3>
                            <p class="text-gray-500 text-sm leading-relaxed">
                                Processed at a licensed local facility we trust.
                                Professionally butchered into premium cuts.
                            </p>
                        </div>
                    </div>
                </div>

                <!-- Step 3 -->
                <div class="relative">
                    <div
                        class="bg-white rounded-2xl border border-forest/5 shadow-sm h-full overflow-hidden"
                    >
                        <div class="h-32 overflow-hidden">
                            <Image
                                src={step3Image}
                                alt="Beef box packed and ready for delivery"
                                class="w-full h-full object-cover"
                                widths={[300, 400]}
                                sizes="(max-width: 768px) 100vw, 25vw"
                            />
                        </div>
                        <div class="p-6">
                            <div
                                class="w-12 h-12 bg-linear-to-br from-forest to-sage rounded-full flex items-center justify-center mb-4 relative z-10 -mt-10 border-4 border-white shadow-lg"
                            >
                                <span
                                    class="font-display text-lg font-bold text-mint-light"
                                    >3</span
                                >
                            </div>
                            <div
                                class="inline-block bg-forest/10 text-forest text-xs font-semibold px-3 py-1 rounded-full mb-3"
                            >
                                Days 11-12
                            </div>
                            <h3
                                class="font-display text-lg font-semibold text-forest mb-2"
                            >
                                Vacuum Sealed Fresh
                            </h3>
                            <p class="text-gray-500 text-sm leading-relaxed">
                                Each cut is vacuum-sealed and packed in
                                insulated boxes with ice packs, ready for
                                delivery.
                            </p>
                        </div>
                    </div>
                </div>

                <!-- Step 4 -->
                <div class="relative">
                    <div
                        class="bg-linear-to-br from-forest to-forest-light rounded-2xl text-cream h-full overflow-hidden"
                    >
                        <div class="h-32 overflow-hidden relative">
                            <Image
                                src={step4Image}
                                alt="The Ferguson family delivering your beef"
                                class="w-full h-full object-cover"
                                widths={[300, 400]}
                                sizes="(max-width: 768px) 100vw, 25vw"
                            />
                            <div class="absolute inset-0 bg-forest/20"></div>
                        </div>
                        <div class="p-6">
                            <div
                                class="w-12 h-12 bg-mint/30 rounded-full flex items-center justify-center mb-4 relative z-10 -mt-10 border-4 border-forest shadow-lg"
                            >
                                <span
                                    class="font-display text-lg font-bold text-mint-light"
                                    >4</span
                                >
                            </div>
                            <div
                                class="inline-block bg-mint/20 text-mint-light text-xs font-semibold px-3 py-1 rounded-full mb-3"
                            >
                                Days 13-14
                            </div>
                            <h3
                                class="font-display text-lg font-semibold text-cream mb-2"
                            >
                                Delivered By Us
                            </h3>
                            <p class="text-cream/80 text-sm leading-relaxed">
                                We personally deliver to your doorâ€”no couriers.
                                We'll shake your hand and answer any questions.
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Comparison callout -->
        <div class="mt-16">
            <div
                class="bg-white rounded-2xl p-8 md:p-12 border border-forest/5 shadow-sm"
            >
                <div
                    class="grid md:grid-cols-2 gap-8 items-center divide-y md:divide-y-0 md:divide-x divide-forest/10"
                >
                    <div class="text-center pb-8 md:pb-0 md:pr-8">
                        <div
                            class="font-display text-5xl md:text-6xl font-bold text-forest mb-2"
                        >
                            ~14 Days
                        </div>
                        <div class="text-gray-500 text-lg">
                            Ferguson Livestock: Paddock to your freezer
                        </div>
                        <div class="mt-4 flex justify-center gap-1">
                            {
                                [1, 2, 3, 4, 5].map(() => (
                                    <div class="w-3 h-3 rounded-full bg-mint" />
                                ))
                            }
                        </div>
                    </div>
                    <div class="text-center pt-8 md:pt-0 md:pl-8">
                        <div
                            class="font-display text-5xl md:text-6xl font-bold text-gray-300 mb-2"
                        >
                            4-6 Weeks
                        </div>
                        <div class="text-gray-400 text-lg">
                            Supermarket: Unknown origin to shelf
                        </div>
                        <div class="mt-4 flex justify-center gap-1">
                            {
                                Array.from({ length: 42 }).map((_, i) => (
                                    <div
                                        class={`w-1 h-3 rounded-full ${i < 5 ? "bg-gray-300" : "bg-gray-200"}`}
                                    />
                                ))
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
