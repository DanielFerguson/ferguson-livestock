---
import { Image } from "astro:assets";
import logo from "../assets/logo.webp";
---

<header class="bg-cream py-5 sticky top-0 z-50 shadow-lg shadow-forest/5">
    <div class="max-w-6xl mx-auto px-6 flex justify-between items-center">
        <a href="#" class="flex items-center gap-3 text-forest no-underline">
            <div
                class="w-12 h-12 bg-forest rounded-full flex items-center justify-center"
            >
                <Image
                    src={logo}
                    alt="Ferguson Livestock"
                    class="w-12 h-12 object-cover rounded-full"
                    widths={[400, 600, 800]}
                    sizes="(max-width: 1024px) 100vw, 50vw"
                />
            </div>
            <div>
                <div class="font-display text-2xl font-semibold tracking-tight">
                    Ferguson Livestock
                </div>
                <div
                    class="text-xs uppercase tracking-widest text-sage font-medium"
                >
                    Snake Valley, Victoria
                </div>
            </div>
        </a>
        <a
            href="#reserve"
            class="inline-block bg-forest text-cream px-4 py-2 md:px-6 md:py-3 rounded-md font-medium text-xs md:text-sm transition-all duration-300 hover:bg-sage hover:-translate-y-0.5 hover:shadow-lg hover:shadow-forest/20"
            onclick="if(typeof gtag==='function'){gtag('event','cta_click',{cta_location:'header',cta_text:'Reserve Your Box'});}"
            >Reserve Your Box</a
        >
    </div>
</header>
